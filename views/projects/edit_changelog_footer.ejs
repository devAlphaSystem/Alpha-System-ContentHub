<% locals.pageTitle='Edit Changelog Footer - ' + project.name %>

<%- include('../partials/header', { pageTitle: locals.pageTitle, currentProjectId: project.id }) %>

<div class="content-header">
  <h1>Edit Changelog Footer: <span class="text-muted"><%= asset.name %></span></h1>
</div>

<% if (locals.errors) { %>
  <div class="alert alert-danger error-summary">
    <i class="fas fa-exclamation-circle alert-icon"></i>
    <div>
      <p><strong>Please fix the following errors:</strong></p>
      <ul>
        <% for (const key of Object.keys(errors)) { %>
          <li><strong><%= key %>:</strong> <%= errors[key].message || errors[key] %></li>
        <% } %>
      </ul>
    </div>
  </div>
<% } %>

<div class="card form-card">
  <form action="/projects/<%= project.id %>/changelog_footers/edit/<%= asset.id %>" method="POST" class="footer-form" novalidate autocomplete="off">
    <div class="form-group form-group-full" style="margin-bottom: 15px;">
      <label for="name">Footer Name <span class="required">*</span></label>
      <input type="text" id="name" name="name" required class="form-control <%= locals.errors?.name ? 'is-invalid' : '' %>" value="<%= asset.name %>" autofocus>
    </div>

    <div class="form-group form-group-full">
      <label for="footer-content">Footer Content (HTML)</label>
      <textarea id="footer-content" name="content" rows="15" class="form-control html-input"><%= asset.content %></textarea>
      <small class="form-text">Enter the HTML content for the footer. Use with caution.</small>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary btn-lg">
        <i class="fas fa-save"></i> Update Changelog Footer
      </button>
      <a href="/projects/<%= project.id %>/changelog_footers" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
  </form>
</div>

<%- include('../partials/footer', { scriptPath: '/js/editor.js' }) %>
