<% locals.pageTitle='New Template - ' + project.name %>

<%- include('../partials/header', { pageTitle: locals.pageTitle, currentProjectId: project.id }) %>

<div class="content-header">
  <h1>New Template for Project: <span class="text-muted"><%= project.name %></span></h1>
</div>

<% if (locals.errors) { %>
  <div class="alert alert-danger error-summary">
    <i class="fas fa-exclamation-circle alert-icon"></i>
    <div>
      <p><strong>Please fix the following errors:</strong></p>
      <ul>
        <% for (const key of Object.keys(errors)) { %>
          <li><strong><%= key %>:</strong> <%= errors[key].message || errors[key] %></li>
        <% } %>
      </ul>
    </div>
  </div>
<% } %>

<div class="card form-card">
  <form action="/projects/<%= project.id %>/templates/new" method="POST" class="template-form" novalidate autocomplete="off">
    <div class="form-group form-group-full" style="margin-bottom: 15px;">
      <label for="name">Template Name <span class="required">*</span></label>
      <input type="text" id="name" name="name" required class="form-control <%= locals.errors?.name ? 'is-invalid' : '' %>" value="<%= locals.template ? template.name : '' %>" autofocus>
    </div>

    <div class="form-group form-group-full">
      <label for="template-content">Template Content (Markdown)</label>
      <textarea id="template-content" name="content" rows="15" class="form-control markdown-input"><%= locals.template ? template.content : '' %></textarea>
      <small class="form-text">Enter the Markdown content for this template.</small>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary btn-lg">
        <i class="fas fa-check"></i> Create Template
      </button>
      <a href="/projects/<%= project.id %>/templates" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
  </form>
</div>

<%- include('../partials/footer', { scriptPath: '/js/editor.js' }) %>
