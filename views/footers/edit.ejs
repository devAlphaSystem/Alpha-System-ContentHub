<% locals.pageTitle='Edit Footer' %>

<%- include('../partials/header', { pageTitle: locals.pageTitle }) %>

<div class="content-header">
  <h1> <%= locals.pageTitle %>: <span class="text-muted"> <%= footer.name %> </span> </h1>
</div>

<% if (locals.errors) { %>
  <div class="alert alert-danger error-summary">
    <i class="fas fa-exclamation-circle alert-icon"></i>
    <div>
      <p><strong>Please fix the following errors:</strong></p>
      <ul>
        <% Object.keys(errors).forEach(key=> { %>
          <li>
            <strong><%= key %>:</strong>
            <%= errors[key].message || errors[key] %>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
<% } %>

<div class="card form-card">
  <form action="/footers/edit/<%= footer.id %>" method="POST" class="footer-form" novalidate autocomplete="off">
    <div class="form-group form-group-full" style="margin-bottom: 15px;">
      <label for="name">Footer Name <span class="required">*</span></label>
      <input type="text" id="name" name="name" required class="form-control <%= locals.errors?.name ? 'is-invalid' : '' %>" value="<%= footer.name %>">
    </div>

    <div class="form-group form-group-full">
      <label for="content">Footer Content (HTML) <span class="required">*</span></label>
      <textarea id="footer-content" name="content" rows="15" required class="form-control html-input <%= locals.errors?.content ? 'is-invalid' : '' %>"><%= footer.content %></textarea>
      <small class="form-text">Enter the HTML content for the footer. Use with caution.</small>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary btn-lg"> <i class="fas fa-save"></i> Update Footer </button>
      <a href="/footers" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
  </form>
</div>

<%- include('../partials/footer', { scriptPath: '/js/editor.js' }) %>