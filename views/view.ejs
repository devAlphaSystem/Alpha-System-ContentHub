<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.pageTitle || entry.title %></title>
    <link rel="icon" type="image/png" sizes="32x32" href="/img/icon.png" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Roboto+Mono:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

    <link rel="stylesheet" href="/css/vendors/hljs-theme.css">
    <link rel="stylesheet" href="/css/view-style.css">

    <% if (locals.isStagedPreview) { %>
      <style>
        .staged-preview-banner {
          background-color: #fdba74;
          color: #7c2d12;
          padding: 10px 20px;
          text-align: center;
          font-weight: 600;
          position: sticky;
          top: 0;
          z-index: 1001;
          border-bottom: 1px solid #f97316;
        }

        body.dark-mode .staged-preview-banner {
          background-color: #b45309;
          color: #fffbeb;
          border-bottom-color: #92400e;
        }

        body:has(.staged-preview-banner) .mobile-header {
          top: 45px;
        }

        body:has(.staged-preview-banner) .project-sidebar,
        body:has(.staged-preview-banner) .toc-sidebar {
          top: 45px;
          height: calc(100vh - 45px);
        }

        @media (max-width: 1023px) {
          body:has(.staged-preview-banner) .main-content {
            padding-top: calc(var(--header-height) + 45px + 24px);
          }
        }
      </style>
    <% } %>
  </head>

  <body class="public-view">

    <script>
      const currentTheme = localStorage.getItem("theme") || "light";

      if (currentTheme === "dark") {
        document.body.classList.add("dark-mode");
      }
    </script>

    <% if (locals.isStagedPreview) { %>
      <div class="staged-preview-banner">
        <i class="fas fa-flask"></i> STAGED PREVIEW - This is not the live version.
      </div>
    <% } %>

    <header class="mobile-header">
      <button id="mobile-project-nav-toggle" class="mobile-nav-toggle <% if (!project) { %>hidden<% } %>" aria-label="Toggle Project Navigation">
        <i class="fas fa-bars"></i>
      </button>
      <a class="mobile-logo"><%= project ? project.name : 'Content Hub' %></a>
      <button id="mobile-toc-nav-toggle" class="mobile-nav-toggle" aria-label="Toggle Table of Contents">
        <i class="fas fa-list-ul"></i>
      </button>
    </header>

    <div class="page-wrapper <%= project?.use_full_width_content ? 'full-width-content' : '' %>">
      <% if (project && (sidebarEntries && sidebarEntries.length > 0 || project.roadmap_enabled || hasPublishedKbEntries)) { %>
        <aside class="project-sidebar" id="project-sidebar">
          <div class="sidebar-sticky-content">
            <h3 class="project-sidebar-title">
              <%= project.name %>
            </h3>
            <nav class="project-entries-nav">
              <ul>
                <% if (sidebarEntries && sidebarEntries.length > 0) { %>
                  <% for(const item of sidebarEntries) { %>
                    <% if (item.type === 'sidebar_header') { %>
                      <li class="sidebar-header-item">
                        <span><%= item.title %></span>
                      </li>
                    <% } else { %>
                      <li>
                        <a href="/view/<%= item.id %>" class="project-entry-link <% if (item.id === entry.id) { %>active<% } %>">
                          <% if (item.type === 'changelog') { %>
                            <i class="fas fa-history fa-fw type-icon"></i>
                          <% } else { %>
                            <i class="fas fa-file-alt fa-fw type-icon"></i>
                          <% } %>
                          <span><%= item.title %></span>
                        </a>
                      </li>
                    <% } %>
                  <% } %>
                <% } %>
                <% if (project.is_publicly_viewable && locals.hasPublishedKbEntries) { %>
                  <li>
                    <a href="/kb/<%= project.id %>" class="project-entry-link">
                      <i class="fas fa-question-circle fa-fw type-icon"></i>
                      <span>Knowledge Base</span>
                    </a>
                  </li>
                <% } %>
                <% if (project.roadmap_enabled) { %>
                  <li>
                    <a href="/roadmap/<%= project.id %>" class="project-entry-link">
                      <i class="fas fa-route fa-fw type-icon"></i>
                      <span>Project Roadmap</span>
                    </a>
                  </li>
                <% } %>
              </ul>
            </nav>
            <div class="theme-toggle-container">
              <button id="theme-toggle" class="theme-toggle-btn" aria-label="Toggle theme">
                <i class="fas fa-sun"></i>
                <i class="fas fa-moon"></i>
              </button>
            </div>
          </div>
        </aside>
      <% } %>

      <div class="main-content">
        <% if (locals.customHeaderHtml) { %>
          <div class="custom-header-content">
            <%- customHeaderHtml %>
          </div>
        <% } %>

        <header class="content-header">
          <div class="header-meta">
            <span class="entry-type <%= entry.type %>">
              <%= entry.type==='changelog' ? 'Changelog' : 'Documentation' %>
            </span>

            <% if (locals.readingTime && readingTime > 0) { %>
              <span class="reading-time"> <i class="far fa-clock"></i> <%= readingTime %> min read </span>
            <% } %>
          </div>

          <h1 class="entry-title"><%= entry.title %></h1>

          <% if (entry.tags && entry.tags.trim()) { %>
            <div class="entry-tags">
              <% entry.tags.split(',').map(tag => tag.trim()).filter(tag => tag).forEach(tag => { %>
                <span class="tag-badge"><%= tag %></span>
              <% }) %>
            </div>
          <% } %>

          <p class="publish-date">Published: <%= new Date(entry.updated).toLocaleDateString('en-US', { year: 'numeric' , month: 'long' , day: 'numeric' }) %></p>
        </header>

        <article id="markdown-content-area" class="markdown-body" data-entry-id="<%= entry.id %>" data-view-time-tracking-enabled="<%= project?.view_time_tracking_enabled ?? false %>" data-is-staged-preview="<%= locals.isStagedPreview ?? false %>">
          <%- contentHtml %>
        </article>

        <div class="feedback-section" style="margin-top: 40px; padding-top: 20px; border-top: 1px solid var(--border-primary); text-align: center;">
          <h4>Was this page helpful?</h4>
          <div style="margin-top: 10px;">
            <button class="btn btn-sm btn-success feedback-btn" data-entry-id="<%= entry.id %>" data-vote-type="yes" style="margin-right: 10px;">
              <i class="fas fa-thumbs-up"></i> Yes
            </button>
            <button class="btn btn-sm btn-danger feedback-btn" data-entry-id="<%= entry.id %>" data-vote-type="no">
              <i class="fas fa-thumbs-down"></i> No
            </button>
          </div>
          <p class="feedback-message" style="display: none; margin-top: 15px; font-weight: 500;"></p>
        </div>

        <% if (locals.customFooterHtml) { %>
          <div class="custom-footer-content">
            <%- customFooterHtml %>
          </div>
        <% } %>
      </div>

      <aside class="toc-sidebar" id="toc-sidebar">
        <div class="sidebar-sticky-content">
          <h3 class="toc-title">On this page</h3>
          <nav id="toc" class="table-of-contents"></nav>
        </div>
      </aside>
    </div>

    <div class="sidebar-backdrop" id="sidebar-backdrop"></div>

    <script src="/js/vendors/mermaid.js"></script>

    <script>
      function initializeMermaid(theme) {
        try {
          const mermaidTheme = theme === 'dark' ? 'dark' : 'neutral';
          mermaid.initialize({
            startOnLoad: false,
            theme: mermaidTheme,
            themeVariables: {
              darkMode: theme === 'dark',
              background: theme === 'dark' ? '#1f2937' : '#ffffff',
            }
          });
          mermaid.run({ querySelector: '.language-mermaid' });
          console.log('Mermaid initialized with theme:', mermaidTheme);
        } catch (e) {
          console.error("Error initializing or running Mermaid:", e);
        }
      }
      document.addEventListener('DOMContentLoaded', () => {
        const currentTheme = document.body.classList.contains('dark-mode') ? 'dark' : 'light';
        initializeMermaid(currentTheme);
      });
    </script>

    <script src="/js/vendors/highlight.min.js"></script>
    <script src="/js/view.js"></script>
  </body>

</html>
