<% locals.pageTitle='Create New Header' %>

<%- include('../partials/header', { pageTitle: locals.pageTitle }) %>

<div class="content-header">
  <h1> <%= locals.pageTitle %> </h1>
</div>

<% if (locals.errors) { %>
  <div class="alert alert-danger error-summary">
    <i class="fas fa-exclamation-circle alert-icon"></i>
    <div>
      <p><strong>Please fix the following errors:</strong></p>
      <ul>
        <% Object.keys(errors).forEach(key=> { %>
          <li>
            <strong><%= key %>:</strong>
            <%= errors[key].message || errors[key] %>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
<% } %>

<div class="card form-card">
  <form action="/headers/new" method="POST" class="header-form" novalidate autocomplete="off">
    <div class="form-group form-group-full" style="margin-bottom: 15px;">
      <label for="name">Header Name <span class="required">*</span></label>
      <input type="text" id="name" name="name" required class="form-control <%= locals.errors?.name ? 'is-invalid' : '' %>" value="<%= locals.header ? header.name : '' %>" placeholder="e.g., Main Site Header">
    </div>

    <div class="form-group form-group-full">
      <label for="content">Header Content (HTML) <span class="required">*</span></label>
      <textarea id="header-content" name="content" rows="15" required class="form-control html-input <%= locals.errors?.content ? 'is-invalid' : '' %>"><%= locals.header ? header.content : '' %></textarea>
      <small class="form-text">Enter the HTML content for the header. Use with caution.</small>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary btn-lg"> <i class="fas fa-check"></i> Create Header </button>
      <a href="/headers" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
  </form>
</div>

<%- include('../partials/footer', { scriptPath: '/js/editor.js' }) %>