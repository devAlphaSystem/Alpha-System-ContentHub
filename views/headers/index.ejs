<% locals.pageTitle='Manage Headers' %>

<%- include('../partials/header', { pageTitle: locals.pageTitle }) %>

<div class="content-header">
  <h1> <%= locals.pageTitle %> </h1>
  <div class="header-actions">
    <button id="refresh-headers-btn" class="btn btn-secondary" title="Refresh Table"> <i class="fas fa-sync-alt"></i> <span>Refresh</span> </button>
    <a href="/headers/new" class="btn btn-primary"> <i class="fas fa-plus"></i> Create New Header </a>
  </div>
</div>

<% if (locals.message === 'created') { %>
  <div class="alert alert-info"> <i class="fas fa-check-circle alert-icon"></i> <span>Header created successfully.</span> </div>
<% } else if (locals.message === 'updated') { %>
  <div class="alert alert-info"> <i class="fas fa-check-circle alert-icon"></i> <span>Header updated successfully.</span> </div>
<% } else if (locals.message === 'deleted') { %>
  <div class="alert alert-info"> <i class="fas fa-check-circle alert-icon"></i> <span>Header deleted successfully.</span> </div>
<% } %>

<% if (locals.error) { %>
  <div class="alert alert-danger"> <i class="fas fa-exclamation-triangle alert-icon"></i> <span><%= error %></span> </div>
<% } %>

<div class="card data-card <% if (headers.length === 0 && !locals.error) { %>hidden<% } %>">
  <div class="table-responsive">
    <table class="data-table">
      <thead>
        <tr>
          <th data-sort-key="name" style="cursor: pointer;">Header Name <span class="sort-icon"><i class="fas fa-sort"></i></span></th>
          <th data-sort-key="updated" style="cursor: pointer;">Last Updated <span class="sort-icon"><i class="fas fa-sort-down"></i></span></th>
          <th class="actions-column">Actions</th>
        </tr>
      </thead>
      <tbody id="headers-table-body">
        <% headers.forEach(header=> { %>
          <tr data-header-id="<%= header.id %>" data-updated-timestamp="<%= new Date(header.updated).getTime() %>">
            <td data-label="Name"> <%= header.name %> </td>
            <td data-label="Updated"> <%= new Date(header.updated).toLocaleDateString('en-US', { month: 'short' , day: 'numeric' , year: 'numeric' }) %> </td>
            <td data-label="Actions" class="actions-cell">
              <a href="/headers/edit/<%= header.id %>" class="btn btn-icon btn-edit" title="Edit Header"> <i class="fas fa-pencil-alt"></i> </a>
              <form action="/headers/delete/<%= header.id %>" method="POST" class="delete-header-form" title="Delete Header">
                <button type="submit" class="btn btn-icon btn-delete"> <i class="fas fa-trash-alt"></i> </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div class="pagination-controls card-footer">
    <button id="prev-page-btn" class="btn btn-secondary" disabled> <i class="fas fa-chevron-left"></i> Previous </button>
    <span id="page-info" class="page-info-text"> Page <%= pagination.page %> of <%= pagination.totalPages %> (<%= pagination.totalItems %> items) </span>
    <button id="next-page-btn" class="btn btn-secondary" <% if (pagination.page>= pagination.totalPages) { %>disabled<% } %>> Next <i class="fas fa-chevron-right"></i> </button>
  </div>
</div>

<% if (headers.length === 0 && !locals.error) { %>
  <div class="card empty-state-card">
    <i class="fas fa-heading empty-state-icon"></i>
    <h2>No custom headers yet</h2>
    <p>Create reusable headers for your view pages.</p>
    <a href="/headers/new" class="btn btn-primary">Create First Header</a>
  </div>
<% } %>

<%- include('../partials/footer', { scriptPath: '/js/headers.js' }) %>